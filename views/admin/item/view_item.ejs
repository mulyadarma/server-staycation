<%- include('../../partials/header.ejs') %>

   <!-- Page Wrapper -->
   <div id="wrapper" style="background-color: rgb(255, 255, 255)"   >

<%- include('../../partials/sidebar.ejs') %>


      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column" >

      <!-- Main Content -->
      <div id="content">

<%- include('../../partials/navbar.ejs') %>

      <!-- Begin Page Content -->
      <div class="container-fluid">

         <!-- Page Heading -->
         <h1 class="h3 mb-4 text-center text-gray-600">Item Page</h1>
         
         <% if(action == 'view'){ %>

<%- include('../../partials/message.ejs') %>

         <ul class="nav nav-tabs mt-3 mb-3" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
               <button class="nav-link active ml-3 mr-3" id="home-tab" data-toggle="tab"
               data-target="#show-item" type="button" role="tab" aria-controls="home" aria-selected="true">Show Item</button>
            </li>
            <li class="nav-item" role="presentation">
               <button class="nav-link" id="profile-tab" data-toggle="tab"   data-target="#add-item" type="button" role="tab" aria-controls="profile" aria-selected="false">Add Item</button>
            </li>
         </ul>

         <div class="tab-content" id="myTabContent">
<%- include('show_table_item.ejs') %>
<%- include('add_item.ejs') %>
         </div>

         <% } else if(action == 'show image'){%> 
         <ul class="nav nav-tabs mt-3 mb-3" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
               <button class="nav-link active ml-3 mr-3" id="home-tab" data-toggle="tab"
               data-target="#show-image" type="button" role="tab" aria-controls="home" aria-selected="true">Show Image</button>
            </li>
         </ul>

         <div class="tab-content" id="myTabContent">
            <%- include('show_image_item.ejs') %>
         </div>
         <% }else{%>
            <ul class="nav nav-tabs mt-3 mb-3" id="myTab" role="tablist">
               <li class="nav-item" role="presentation">
                  <button class="nav-link active ml-3 mr-3" id="home-tab" data-toggle="tab"
                  data-target="#edit-item" type="button" role="tab" aria-controls="home" aria-selected="true">Edit Item</button>
               </li>
            </ul>
   
            <div class="tab-content" id="myTabContent">
               <%- include('edit_item.ejs') %>
            </div>

            <% } %>
         
      </div>
      <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

<%- include('../../partials/footer.ejs') %>

   </div>
   <!-- End of Content Wrapper -->

</div>

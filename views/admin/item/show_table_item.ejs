<!-- DataTales Example -->

<div
  class="tab-pane fade show active"
  id="show-item"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr class="text-center table-borderless">
              <th class="text-left">No</th>
              <th>Title</th>
              <th>Price</th>
              <th>Country</th>
              <th>City</th>
              <th>Category</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% for(let i = 0; i < item.length; i++){ %>
            <tr>
              <td class="text-center"><%= i + 1 %></td>
              <td><%= item[i].title %></td>
              <td>IDR <%= item[i].price %> K</td>
              <td><%= item[i].country %></td>
              <td><%= item[i].city %></td>
              <td><%= item[i].categoryId.name %></td>
              <td class="text-center">
                <form
                  action="/admin/item/<%= item[i].id %>/delete?_method=DELETE"
                  method="POST"
                >
                  <a
                    href="/admin/item/show-image/<%= item[i].id %>"
                    class="btn btn-info btn-circle btn-sm m-1"
                    style="box-shadow: rgba(85, 52, 0, 0.35) 0px 5px 14px"
                    id="tooltip"
                  >
                    <i class="fas fa-image"></i>
                    <span class="tooltipImage" id="tooltipText"
                      >View Image</span
                    >
                  </a>

                  <a
                    href="/admin/item/<%= item[i].id %>"
                    class="btn-warning btn-circle btn-sm m-1"
                    style="box-shadow: rgba(85, 52, 0, 0.35) 0px 5px 14px"
                    id="tooltip"
                  >
                    <i class="fas fa-edit"></i>
                    <span class="tooltipEdit" id="tooltipText">Edit Item</span>
                  </a>

                  <a
                    href="/admin/item/show_detail_item/<%= item[i].id %>"
                    class="btn btn-success btn-circle btn-sm m-1"
                    style="box-shadow: rgba(85, 52, 0, 0.35) 0px 5px 14px"
                    id="tooltip"
                  >
                    <i class="fas fa-plus"></i>
                    <span class="tooltipDetailItem" id="tooltipText"
                      >Detail Item</span
                    >
                  </a>

                  <button
                    type="submit"
                    class="btn-danger btn-circle btn-sm m-1"
                    style="
                      box-shadow: rgba(67, 67, 67, 0.417) 0px 5px 14px;
                      text-decoration: none;
                      border: none;
                    "
                    id="tooltip"
                  >
                    <i class="fas fa-trash"></i>
                    <span class="tooltipDelete" id="tooltipText">Delete</span>
                  </button>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

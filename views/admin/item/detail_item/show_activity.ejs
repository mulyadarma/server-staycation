<!-- DataTales Example -->

<div class="tab-pane fade mt-3" id="show-activity">
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/activity"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Enter name"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Type</label>
              <input
                type="text"
                class="form-control"
                name="type"
                placeholder="Enter type"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input
                type="file"
                class="modification-image"
                name="image"
                required
              />
            </div>

            <input type="hidden" value="<%= itemId %>" name="itemId" />
            <button
              type="submit"
              class="btn btn-primary mr-3 mt-4"
              style="box-shadow: 1px 1px 10px 1px #0000002b"
            >
              Save
            </button>
            <a
              href="/admin/item"
              class="btn btn-outline-dark mt-4"
              style="box-shadow: 1px 1px 10px 1px #0000002b"
              >Back</a
            >
          </form>
        </div>

        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead class="table-borderless">
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>

              <tbody>
                <% for(let i = 0; i < activity.length; i++){ %>
                <tr>
                  <td class="text-center"><%= i + 1 %></td>
                  <td><%= activity[i].name %></td>
                  <td><%= activity[i].type %></td>
                  <td>
                    <img
                      src="http://localhost:3000/<%= activity[i].imageUrl %>"
                      alt="broke img"
                      height="auto"
                      width="60px"
                    />
                  </td>
                  <td class="text-center">
                    <form
                      action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void();"
                        class="btn-warning btn-circle btn-sm mr-1 button-update-activity"
                        style="box-shadow: rgba(85, 52, 0, 0.35) 0px 5px 14px"
                        id="tooltip"
                        type="button"
                        data-id="<%= activity[i].id %>"
                        data-type="<%= activity[i].type %>"
                        data-name="<%= activity[i].name %>"
                      >
                        <i class="fas fa-edit"></i>
                        <span class="tooltipEdit" id="tooltipText">Edit</span>
                      </a>

                      <button
                        type="submit"
                        class="btn-danger btn-circle btn-sm ml-1"
                        style="box-shadow: rgba(67, 67, 67, 0.417) 0px 5px 14px"
                        id="tooltip"
                      >
                        <i class="fas fa-trash"></i>
                        <span class="tooltipDelete" id="tooltipText"
                          >Delete</span
                        >
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

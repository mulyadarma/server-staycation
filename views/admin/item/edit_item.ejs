<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
   <div class="card shadow mb-4">
      <div class="card-body">
         <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
               <label for="name">Title</label>
               <input type="text" class="form-control" name="title"
               value="<%= item.title %>" placeholder="Enter title" required>
            </div>
            <div class="form-group">
               <label for="name">Price</label>
               <input type="number" class="form-control" name="price" 
               value="<%= item.price %>" placeholder="Enter price" required>
            </div>
            <div class="form-group">
               <label for="name">City</label>
               <input type="text" class="form-control" name="city" 
               value="<%= item.city %>"  placeholder="Enter city" required>
            </div>
            <div class="form-group">
               <label for="name">Category</label>
               <select class="form-control" name="categoryId">
                  <option value="<%= item.categoryId._id %>">--- <%= item.categoryId.name %> ---</option>

                  <% for(let i = 0; i<category.length; i++){ %>
                     <option value="<%= category[i].id%>"><%= category[i].name%></option>
                  <% } %>
               </select>
            </div>
            <div class="form-group choose-image">
               <label for="name">Image</label>
               <input type="file" class=" upload-box" name="image" multiple>
            </div>
            <div class="form-group">
               <label for="name">Description</label>
               <textarea name="about" class="form-control"><%= item.description %></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary mr-3" style="box-shadow: 1px 1px 10px 1px #0000002b;">Save</button>
            
            <a href="/admin/item" class="btn btn-warning" style="box-shadow: 1px 1px 10px 1px #0000002b;">Back</a>
         </form>
      </div>
   </div>
</div>

<!-- input name di sesuaikan dengan yg ada di itemSchema pada folder models di file item.js-->
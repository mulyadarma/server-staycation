<!-- DataTales Example -->

<div class="tab-pane fade show active" id="show-image" role="tabpanel" aria-labelledby="home-tab">

   <div class="row">
      <!-- membuat perulangan penampilan image -->
      <% for(let x = 0; x < item.imageId.length; x++){ %>
      <div class="col-md-4">
         <div class="card shadow mb-4">
            <div class="card-body">
               <div class="table-responsive">
                     <img src="http://localhost:3000/<%= item.imageId[x].imageUrl %>" 
                           alt="image"
                           style="width: 100%; display: block;"
                     >
               </div>
            </div>
         </div>
      </div>
      <% } %>
   </div>
<a href="/admin/item" class="btn btn-warning" style="box-shadow: 1px 1px 10px 1px #0000002b;">Back</a>
</div>
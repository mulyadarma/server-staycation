<!-- DataTales Example -->

<div class="card shadow mb-4">
  <div class="row d-flex justify-content-between">
    <a
      href="/admin/booking"
      class="btn btn-warning mt-3"
      style="box-shadow: 1px 1px 10px 1px #0000002b; margin-left: 35px"
      >Back</a
    >

    <div class="mr-4 mt-3"><%- include('../../partials/message.ejs') %></div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="http://localhost:3000/<%= booking.payments.proofPayment %>"
          alt="image"
          style="
            width: 100%;
            display: block;
            box-shadow: rgba(137, 137, 137, 0.417) 0px 0px 20px 1px;
          "
          class="mt-1"
        />
        <div class="row ml-4">
          <% if(booking.payments.status == 'Proses'){%>

          <form
            action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
            method="POST"
          >
            <button
              type="submit"
              class="btn-success btn-sm mt-3 ml-1 mr-1 mb-1 p-2 pr-3 pl-3"
              style="
                box-shadow: rgba(67, 67, 67, 0.417) 0px 5px 14px;
                text-decoration: none;
                border: none;
              "
              id="tooltip"
            >
              <i class="fas fa-check"></i>
              Confirm
            </button>
          </form>
          <form
            action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
            method="POST"
          >
            <button
              type="submit"
              class="btn-danger btn-sm mt-3 ml-3 mr-1 mb-1 pl-3 pr-3 pt-2 pb-2"
              style="
                box-shadow: rgba(67, 67, 67, 0.417) 0px 5px 14px;
                text-decoration: none;
                border: none;
              "
              id="tooltip"
            >
              <i class="fas fa-times"></i>
              Reject
            </button>
          </form>

          <% } %>
        </div>
      </div>

      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead class="table-borderless">
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName %>
                </td>
                <td>Rp <%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Invoice</th>
            <th>Date</th>
            <th>Title</th>
            <th>Name Member</th>
            <th>Status</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < booking.length; i++){ %>
          <tr>
            <td class="text-center"><%= i + 1 %></td>
            <td>#<%= booking[i].invoice %></td>
            <td>
              <%= booking[i].bookingStartDate.toLocaleString().split(',')[0] %>
              <span class="text-info font-weight-bolder"> - </span>
              <%= booking[i].bookingEndDate.toLocaleString().split(',')[0] %>
            </td>
            <td><%= booking[i].itemId.title %></td>
            <td>
              <%= booking[i].memberId.firstName %> <%=
              booking[i].memberId.lastName %>
            </td>
            <td><%= booking[i].payments.status %></td>
            <td class="text-center">
              <a
                href="/admin/booking/<%= booking[i].id %>"
                class="btn-success btn-circle btn-sm button-update"
                style="
                  box-shadow: rgba(85, 52, 0, 0.35) 0px 5px 14px;
                  text-decoration: none;
                "
                id="tooltip"
                type="button"
              >
                <i class="fas fa-eye"></i>
                <span class="tooltipDetailItem" id="tooltipText">View</span>
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
